{
    "name": "ghostwriter/event-dispatcher",
    "description": "Event Dispatcher implementation.",
    "license": "BSD-3-Clause",
    "type": "library",
    "keywords": [
        "ghostwriter",
        "event-dispatcher",
        "psr-14"
    ],
    "authors": [
        {
            "name": "Nathanael Esayeas",
            "email": "nathanael.esayeas@protonmail.com",
            "homepage": "https://github.com/ghostwriter",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/ghostwriter/event-dispatcher/issues",
        "forum": "https://github.com/ghostwriter/event-dispatcher/discussions",
        "source": "https://github.com/ghostwriter/event-dispatcher",
        "docs": "https://github.com/ghostwriter/event-dispatcher",
        "rss": "https://github.com/ghostwriter/event-dispatcher/releases.atom"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/ghostwriter"
        }
    ],
    "require": {
        "php": ">=8.1,<8.3",
        "ghostwriter/container": "^1.2",
        "ghostwriter/option": "^1.2"
    },
    "require-dev": {
        "ghostwriter/coding-standard": "dev-main",
        "infection/infection": "^0.26",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-phpunit": "^0.18",
        "rector/rector": "^0.15",
        "vimeo/psalm": "^5.4"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Ghostwriter\\EventDispatcher\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ghostwriter\\EventDispatcher\\Tests\\": "tests/"
        },
        "files": [
            "tests/Fixture/functions.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "classmap-authoritative": true,
        "discard-changes": true,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "prepend-autoloader": true,
        "process-timeout": 5000,
        "sort-packages": true
    },
    "scripts": {
        "cache:clear": [
            "rm -fr ./.cache"
        ],
        "check": [
            "@composer validate",
            "@normalizer",
            "@cs-check",
            "@cs-fix",
            "@test",
            "@infection",
            "@psalm:security",
            "@rector:dry-run",
            "@psalm:dry-run"
        ],
        "cs-check": "vendor/bin/ecs check --clear-cache || true",
        "cs-fix": "vendor/bin/ecs check --fix --clear-cache",
        "infection": [
            "@putenv XDEBUG_MODE=coverage",
            "vendor/bin/infection --verbose"
        ],
        "missing-returntypes": "psalm --alter --issues=MissingReturnType",
        "normalizer": "composer normalize --no-check-lock",
        "phpunit": "phpunit --colors=always --testdox --stop-on-failure",
        "psalm": "@psalm:shepherd",
        "psalm:baseline": "psalm --set-baseline=psalm-baseline.xml",
        "psalm:dry-run": "psalm --alter --issues=all --dry-run",
        "psalm:missing": "psalm --alter --issues=MissingReturnType",
        "psalm:security": "psalm --taint-analysis",
        "psalm:shepherd": "psalm --shepherd --stats --no-diff --no-cache",
        "rector": "vendor/bin/rector process",
        "rector:dry-run": "vendor/bin/rector process --dry-run || true",
        "test": [
            "@xdebug",
            "@phpunit",
            "@psalm"
        ],
        "test:coverage": [
            "@cache:clear",
            "@xdebug",
            "@phpunit"
        ],
        "xdebug": [
            "@putenv XDEBUG_MODE=coverage"
        ]
    }
}
