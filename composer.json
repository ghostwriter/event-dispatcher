{
    "name": "ghostwriter/event-dispatcher",
    "description": "Event Dispatcher implementation.",
    "license": "BSD-3-Clause",
    "type": "library",
    "keywords": [
        "ghostwriter",
        "event-dispatcher",
        "psr-14"
    ],
    "authors": [
        {
            "name": "Nathanael Esayeas",
            "email": "nathanael.esayeas@protonmail.com",
            "homepage": "https://github.com/ghostwriter",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/ghostwriter/event-dispatcher/issues",
        "forum": "https://github.com/ghostwriter/event-dispatcher/discussions",
        "source": "https://github.com/ghostwriter/event-dispatcher",
        "docs": "https://github.com/ghostwriter/event-dispatcher",
        "rss": "https://github.com/ghostwriter/event-dispatcher/releases.atom"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/ghostwriter"
        }
    ],
    "require": {
        "php": ">=8.1 <8.4",
        "ghostwriter/container": "^1.5",
        "ghostwriter/option": "^1.5.1"
    },
    "require-dev": {
        "ghostwriter/coding-standard": "dev-main"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Ghostwriter\\EventDispatcher\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ghostwriter\\EventDispatcher\\Tests\\": "tests/"
        },
        "files": [
            "tests/Fixture/functions.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "classmap-authoritative": true,
        "discard-changes": true,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "prepend-autoloader": true,
        "process-timeout": 5000,
        "sort-packages": true
    },
    "scripts": {
        "cache:clear": [
            "rm -fr ./.cache"
        ],
        "check": [
            "@composer validate",
            "@cs-check",
            "@cs-fix",
            "@test",
            "@infection",
            "@psalm:security",
            "@rector:dry-run",
            "@psalm:dry-run"
        ],
        "cs-check": "vendor/bin/ecs check --clear-cache || true",
        "cs-fix": "vendor/bin/ecs check --fix --clear-cache",
        "infection": [
            "@xdebug",
            "@php vendor/bin/infection --verbose"
        ],
        "missing-returntypes": "@php vendor/bin/psalm --alter --issues=MissingReturnType",
        "normalizer": "composer normalize --no-check-lock",
        "phpunit": "@php vendor/bin/phpunit --colors=always --testdox --stop-on-failure",
        "phpunit:migrate": "@php vendor/bin/phpunit --migrate-configuration",
        "psalm": "@psalm:shepherd",
        "psalm:baseline": "@php vendor/bin/psalm --set-baseline=psalm-baseline.xml",
        "psalm:dry-run": "@php vendor/bin/psalm --alter --issues=all --dry-run",
        "psalm:missing": "@php vendor/bin/psalm --alter --issues=MissingReturnType",
        "psalm:security": "@php vendor/bin/psalm --taint-analysis",
        "psalm:shepherd": "@php vendor/bin/psalm --shepherd --stats --no-diff --no-cache",
        "rector": "@php vendor/bin/rector process",
        "rector:dry-run": "@php vendor/bin/rector process --dry-run || true",
        "test": [
            "@xdebug",
            "@phpunit",
            "@psalm"
        ],
        "test:coverage": [
            "@cache:clear",
            "@xdebug",
            "@phpunit"
        ],
        "xdebug": [
            "@putenv XDEBUG_MODE=coverage"
        ]
    }
}
